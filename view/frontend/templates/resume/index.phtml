 */

// Get our resume, that comes from our xml file
$xml = $block->getResumeData();

?>
<h1>Some Personal Information</h1>
<div>Name: <?php echo $xml->personal_information->full_name; ?></div>
<div>Email: <?php echo $xml->personal_information->email; ?></div>
<div>Cell Phone: <?php echo $xml->personal_information->cell_phone; ?></div>
<div>Magento URL: <?php echo $xml->personal_information->magento_url; ?></div>
<div>LinkedIn URL: <?php echo $xml->personal_information->linkedin_url; ?></div>
